<p id="notice"><%= notice %></p>

<h1>閲覧</h1>

<p>
  <strong>物件名: </strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料: </strong>
  <%= @property.rent %>円
</p>

<p>
  <strong>築年数: </strong>
  <%= @property.property_age %>年
</p>

<p>
  <strong>備考: </strong>
  <%= @property.notes %>
</p>

<hr>

<% @property.stations.each.with_index(1) do |station, count| %>

  <h3>最寄り駅<%= count %></h3>

  <p>
    <strong>路線名: </strong>
    <%= station.line %>
  </p>

  <p>
    <strong>駅名: </strong>
    <%= station.station_name %>
  </p>

  <p>
    <strong>徒歩分数: </strong>
    <%= station.line %>分
  </p>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
