<%= nested_form_for  property do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= property.errors.count %>件のエラーがあります</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :property_name %>
    <%= form.text_field :property_name %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.number_field :rent %>
  </div>

  <div class="field">
    <%= form.label :property_age %>
    <%= form.number_field :property_age %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>

  <hr>

  <%= form.fields_for :stations do |stations_form| %>
    <h3><%= form.label :stations %></h3>

    <div class="field">
      <%= stations_form.label :line %>
      <%= stations_form.text_field :line %>
    </div>

    <div class="field">
      <%= stations_form.label :station_name %>
      <%= stations_form.text_field :station_name %>
    </div>

    <div class="field">
      <%= stations_form.label :distance_time %>
      <%= stations_form.number_field :distance_time %>
    </div>
    <% if @property.persisted? %>
      <div class="field">
        <%= stations_form.check_box :_destroy %>
        <%= stations_form.label :_destroy, "削除" %>
      </div>
    <% end %>
    <%= stations_form.link_to_remove '最寄り駅を削除' %>
  <% end %>
  <%= form.link_to_add '最寄り駅を追加', :stations %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
